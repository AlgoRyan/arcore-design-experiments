<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txt_num_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        tools:text="Number of feature points: ###"/>

    <TextView
        android:id="@+id/txt_avg_confidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        tools:text="Average feature point confidence: ##%"/>

    <TextView
        android:id="@+id/txt_time_plane_detection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time of first plane detection: NA"
        android:textColor="@android:color/holo_red_dark"/>

    <TextView
        android:id="@+id/txt_plane_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size of detected plane: NA"
        android:textColor="@android:color/holo_red_dark"/>

    <Button
        android:id="@+id/btn_start_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Start recording"/>

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Reset"
        android:visibility="gone"/>

</LinearLayout>